{
  "compilerOptions": {
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "types": [
      "react",
      "node"

    ],
    "rootDir": "src",
    "outDir": "dist",
    "stripInternal": true,
    "removeComments": true,
    "declarationMap": true,
    "declaration": true,
  },
  "include": [
    "src/**/*", "example/api"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}